<div id="<%= dom_id cart %>" class="w-full sm:w-auto my-5 space-y-5">
  <h2 class="font-bold text-lg mb-3 pb-2 border-b-2">
    Your Pragmatic Cart
  </h2>

  <ul class="list-none list-inside">
    <% cart.line_items.each do |item| %>
      <li><%= item.quantity %> &times;&nbsp; <%= item.product.title %></li>
    <% end %>
  </ul>
</div>